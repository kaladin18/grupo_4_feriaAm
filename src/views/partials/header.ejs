<header>
  <div class="top-header flex-row">
    <div class="burger-menu">
      <i class="fas fa-bars"></i>
    </div>
    <a href="/">
      <picture class="logo">
        <img src="/images/logo.svg" alt="Logo del sitio">
      </picture>
    </a>

    <div class="register-login">
      <% if (locals.isLogged) { %>
      <div class="dropdown">

        <img src="/images/users/<%= locals.currentUser.image %> " alt="Imagen de perfil del usuario">
        <button class="dropbtn"><%= locals.currentUser.name %></button>
        <div class="dropdown-content">
        <a href="/users/profile">Mi perfil</a>
        <a href="/users/logout">Cerrar sesión</a>
      </div>
      </div>
      <% } else {%>

      <a href="/users/register">Registrate<i class="far fa-id-card"></i></a>
      <a href="/users/login">Ingresá <i class="fas fa-sign-in-alt"></i></a>
      <% } %>
    </div>
    <div class="cart">
      <a href="/products/cart"><i class="fas fa-shopping-bag"></i></a>
    </div>
    <form action="/products/search" method="GET" enctype="application/x-www-form-urlencoded">
      <input type="text" name="query" class="input" placeholder="Buscar productos...">
      <button type="submit"><i class="fa fa-search"></i></button>
    </form>
  </div>
  <nav>
    <ul>
      <li><a href="/products/search/new">Nuevos</a></li>
      <li><a href="/products/search/used">Usados</a></li>
      <li><a href="/products/search/clothes">Ropa</a></li>
      <li><a href="/products/search/shoes">Calzados</a></li>
    </ul>
  </nav>

</header>